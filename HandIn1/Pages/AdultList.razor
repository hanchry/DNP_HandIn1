@page "/AdultList"
@using FileData
<h3>AdultList</h3>

@inject IFileReader fileReader
@inject NavigationManager NavMgr

<p>
    Filter by first name: <input type="text" @oninput="@((arg) => FindByName(arg))" style="width:50px"/>
</p>


@if (toShow == null)
{
    <p>no adults found</p>
}
else
{
    
    <table class="table">
        <thead >
        <tr>
            <th>Id</th>
            <th>FirstName</th>
            <th>LastName</th>
            <th>Age</th>
            <th>Sex</th>
            <th>Action</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in toShow)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.FirstName</td>
                <td>@item.LastName</td>
                <td>@item.Age</td>
                <td>@item.Sex</td>
            <td><a class="btn btn-primary" @onclick="() => NavigateToAdultView()">View</a>  |
                <a class="btn btn-danger" @onclick="() => DeleteAdult(item)">Delete</a></td>
            </tr>
        }
        </tbody>
    </table>
}
