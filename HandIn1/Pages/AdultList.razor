@page "/AdultList"
@attribute [Authorize(Policy = "MustBeLoggedIn")]
@using FileData
@using HandIn1.Data
<h3>AdultList</h3>

@inject IFileReader fileReader
@inject NavigationManager NavMgr

<p>
    Filter by first name: <input type="text" @oninput="@((arg) => FindByName(arg))" style="width:50px"/>
</p>


@if (toShow == null)
{
    <p>no adults found</p>
}
else
{
    <table class="table">
        <thead class="table-primary">
        <tr>
            <th>Id</th>
            <th>FirstName</th>
            <th>LastName</th>
            <th>Age</th>
            <th>Sex</th>
            <th>View</th>
            <th>Action</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in toShow)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.FirstName</td>
                <td>@item.LastName</td>
                <td>@item.Age</td>
                <td>@item.Sex</td>
                <td><a class="btn btn-primary" @onclick="() => NavigateToAdultView(item.Id)">View</a></td>

                <td>
                    <button @onclick="@(() => EditAdult(item.Id))"> <i class="oi oi-pencil" style="color:green"/> </button> |
                    <button @onclick="@(() => DeleteAdult(item))"> <i class="oi oi-trash" style="color:red"/> </button>
                </td>
            </tr>
        }
        </tbody>
    </table>
}